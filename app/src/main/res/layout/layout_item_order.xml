<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_la_tv_no"
        style="@style/alr_title_com_nor"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:text="@string/tx_default"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/order_la_tv_qc_status"
        style="@style/alr_title_com_nor"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_toEndOf="@id/order_la_tv_no"
        android:text="@string/tx_default"
        android:textStyle="normal"/>


    <TextView
        android:id="@+id/order_la_tv_fg_gdj"
        style="@style/alr_title_com_nor"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:gravity="left|center"
        android:paddingStart="@dimen/text_20"
        android:layout_toEndOf="@id/order_la_tv_qc_status"
        android:text="@string/tx_default"
        android:textStyle="normal"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/order_la_tv_sku_abt"
        style="@style/alr_title_com_nor"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/order_la_tv_fg_gdj"
        android:paddingVertical="10dp"
        android:layout_marginStart="3dp"
        android:text="@string/tx_default"
        android:gravity="left|center"
        android:paddingStart="@dimen/text_20"
        android:textStyle="normal"
        android:maxLines="2"/>


    <TextView
        android:id="@+id/order_la_tv_qty_total"
        style="@style/alr_title_com_nor"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/order_la_tv_sku_abt"
        android:paddingVertical="10dp"
        android:text="@string/tx_default"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:textStyle="normal" />

</RelativeLayout>