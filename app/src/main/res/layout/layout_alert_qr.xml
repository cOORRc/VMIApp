<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_qr"
    android:background="@drawable/shape_img_logo"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/styleTitle_20Bold"
            android:textSize="@dimen/text_22"
            android:id="@+id/alert_tv_title_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_stock_replenishment"
            android:textAlignment="center"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/alert_bt_close_confirm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_red_dark"
            android:foreground="@drawable/ic_close"
            android:onClick="onClickClose" />

        <ImageView
            android:id="@+id/alert_img_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/alert_tv_title_qr_code"
            android:background="@android:color/white" />

        <TextView
            style="@style/styleTitle_16Normal"
            android:id="@+id/alert_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/alert_img_qr_code"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            style="@style/Title_warning"
            android:id="@+id/alert_tv_ple_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tx_pls_scan"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/alert_tv_time"
            android:lines="2"
            android:maxLines="2"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="20dp" />

    </RelativeLayout>


</android.support.design.card.MaterialCardView>
